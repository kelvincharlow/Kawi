{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src", "App.tsx", "components/ComponentManagement.tsx", "components/DriverManagement.tsx", "components/VehicleRegistry.tsx", "components/FuelManagement.tsx", "components/MaintenanceManagement.tsx", "components/TransferManagement.tsx", "components/WorkTicketManagement.tsx", "components/ReportsAnalytics.tsx", "components/ServerDebugPanel.tsx", "utils/**/*.ts"],
  "exclude": ["components/ui/**/*", "supabase/functions/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
